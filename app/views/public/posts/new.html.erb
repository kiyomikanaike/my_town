<div class="container">
 <div class="row">
  <div class="mx-auto">

   <h5 class="text-center mt-4 mb-4">新 規 投 稿</h5>

    <% if @post.errors.any? %>
      <%= @post.errors.count %>件のエラーが発生しました
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @post do |f| %>

     <div class="form-group">
       <%= f.label "都道府県" %>
       <%= f.select :prefecture_id, Prefecture.pluck(:name, :id),{ include_blank: '選択してください' } ,{ class: "form-control" } %>
     </div>

     <div class="form-group">
       <%= f.label "スポット名" %>
       <%= f.text_field :spot_name,class: "form-control" %>
     </div>

     <div class="form-group">
       <%= f.label "写真（複数選択可）" %>
       <%= f.file_field :images, direct_upload: true, multiple: true %>
     </div>

     <div class="form-group">
       <%= f.label "郵便番号" %>
       <%= f.text_field :spot_postal_code,class: "form-control"  %>
     </div>

     <div class="form-group">
       <%= f.label "住所" %>
       <%= f.text_field :spot_address,class: "form-control"  %>
     </div>

     <div class="form-group">
       <%= f.label "おすすめポイント" %>
       <%= f.text_area :point,class: "form-control"  %>
     </div>

     <div class="form-group">
       <%= f.label "公開/非公開" %>
       <%= f.select :status, Post.statuses.map {|k, v| [k, k]}, {}, class: "form-control"   %>
     </div>

     <div class="form-group mt-4 mb-2">
       <%= f.submit "投稿",class: 'btn' %>
     </div>

    <% end %>

  </div>
 </div>
</div>