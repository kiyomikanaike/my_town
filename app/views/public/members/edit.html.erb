<div class="container">
 <div class="row">
  <div class="mx-auto">

   <h5 class="text-center mt-4 mb-4">マイページ編集</h5>

    <%= form_with model: @member,url: members_information_path do |f| %>
     <div class="form-group">
      <%= f.label "お住まい" %>
      <%= f.select :residence, Member::RESIDENCES, { include_blank: '選択してください', selected: @member.residence } ,class: "form-control" %>
     </div>

     <div class="form-group">
      <%= f.label "生年月日" %><br>
      <%= f.date_select :birth_date, {use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1)},{ class: "form-control", style: 'display: inline-block; width: auto;' } %>
     </div>

     <div class="form-group">
      <%= f.label "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
     </div>

     <div class="form-group mt-4 mb-2">
      <%= f.submit "更 新",class: 'btn' %>
     </div>
    <% end %>

  </div>
 </div>
</div>