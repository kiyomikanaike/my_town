<div class="container">
  <div class="mx-auto">

   <h5 class="mt-4 mb-4">投稿履歴一覧</h5>
   <div class="row">
    <% @posts.each do |post| %>
     <% post.images.each do |image| %>
      <div class= "col-3">
       <%= link_to post_path(post.id) do %>
         <%= image_tag image.variant(resize_to_limit: [100, 100]) %>
       <% end %>
       <div>
         スポット名：<%= post.spot_name %>
       </div>
       <div class= "mb-4">
         投稿月：<%= post.created_at.strftime('%Y年%m月') %>
       </div>
      </div>
     <% end %>
    <% end %>
   </div>

 </div>
</div>