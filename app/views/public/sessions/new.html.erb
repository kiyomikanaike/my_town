<div class="container">
 <div class="row">
  <div class="mx-auto">

  <h5 class="text-center mt-4 mb-4">会員の方はこちら</h5>

  <%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= form_with model: resource, url: session_path(resource_name) do |f| %>
   <%= render "devise/shared/error_messages", resource: resource %>

     <div class="form-group">
      <%= f.label "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
     </div>


     <div class="form-group">
       <%= f.label "パスワード" %>
       <% if @minimum_password_length %><em>(<%= @minimum_password_length %> 文字以上)</em>
       <% end %>
       <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
     </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

      <div class="form-group">
        <%= f.submit "ログイン",class: 'btn' %>
      </div>

    <% end %>

  <p class="text-center mt-4 mb-2 ">会員登録がお済みでない方</p>
  <%= render "devise/shared/links" %>

  </div>
 </div>
</div>
