<div class="container">
 <div class="row">
  <div class="mx-auto">

    <h5 class="text-center mt-4 mb-4">会 員 登 録</h5>

    <%= form_with model: Member.new, url: member_registration_path do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label "お住まい" %>
        <%= f.select :residence, Public::RegistrationsController::REGIDENCE_LIST, { include_blank: '選択してください' } ,{ class: "form-control" }%>
      </div>

      <div class="form-group">
        <%= f.label "生年月日" %><br>
        <%= f.date_select :birth_date, {use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1)},{ class: "form-control", style: 'display: inline-block; width: auto;' } %>
      </div>

      <div class="form-group">
        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %><em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "パスワード（確認用）" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "登 録",class: 'btn' %>
      </div>

    <% end %>


      <h6 class="text-center mt-4 mb-2 ">既に登録済みの方</h6>
      <%= render "devise/shared/links"%>

  </div>
 </div>
</div>
