<div class="container">
 <div class="row">
  <div class="mx-auto">

    <h5 class="mt-4 mb-4">会員登録</h5>

    <%= form_with model: Member.new, url: member_registration_path do |f| %>
      <%= #render "public/shared/error_messages", resource: resource %>
      <table>
          <tr>
          <td><%= f.label "居住地" %></td>
          <td><%= f.text_field :residence %></td>
        　</tr>

          <tr>
          <td><%= f.label "生年月日" %></td>
          <td><%= f.text_field :birth_date %></td>
        　</tr>

          <tr>
          <td><%= f.label "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %></td><br/>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        　</tr>

          <tr>
          <td><%= f.label "パスワード（確認用）" %></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        　</tr>

          <tr>
          <td><%= f.submit "登録",class: 'btn btn-success' %></td>
          </tr>
        </table>
        <% end %>


      <h5 class="mt-4 mb-4">既に登録済みの方</h5>
      <%= #render "public/shared/links" %>

  </div>
 </div>
</div>
