<div class="container">
 <div class="row">
  <div class="mx-auto">

     <h5 class="mt-4 mb-4">投稿詳細</h5>
      <table>
       <tr>
        <td>
         <% if @post.images.attached? %>
          <% @post.images.each do |image| %>
           <%= image_tag image.variant(resize_to_limit: [100, 100]) %>
          <% end %>
         <% end %>
        </td>
       </tr>
       <tr>
        <td class="font-weight-bold"><%= @post.prefectures %></td>
        <th>の</th>
        <td class="font-weight-bold"><%= @post.spot_name %></td>
       </tr>
       <tr>
        <th>address</th>
        <td><%= @post.spot_postal_code %></td><td><%= @post.spot_address %></td>
       </tr>
       <tr>
        <th>point</th>
        <td><%= @post.point %></td>
       </tr>
       <tr>
        <th>投稿者</th>
        <td><%= @post.member.residence %></td><td><%= @post.member.age %>歳</td>
       </tr>
      </table>

  </div>
 </div>
</div>