<div class="container">
  <h4 class="mt-5 mb-4">会員一覧</h4>

    <table class="w-100 table">
      <tr>
       <th>会員ID</th>
       <th>居住地</th>
       <th>生年月日</th>
       <th>メールアドレス</th>
       <th>ステータス</th>
      </tr>
      <% @members.each do |member| %>
      <tr>
       <td><%= member.id %></td>
       <td><%= link_to member.residence,admin_member_path(member.id),class: 'text-dark' %></td>
       <td><%= member.birth_date %></td>
       <td><%= member.email %></td>
           <% if member.is_deleted == true %>
        <td class="text-black-50">退会</td>
           <% else %>
        <td class="text-success">有効</td>
           <% end %>

      </tr>
      <% end %>
    </table>
    <%= paginate @members %>
</div>
