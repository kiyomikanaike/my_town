<div class="container">
 <div class="row">
  <div class="mx-auto">

    <h4 class="mt-5 mb-4">会員詳細</h4>
    <table class="table">
    <tr>
      <th>居住地</th>
      <td><%= @member.residence %></td>
    </tr>
    <tr>
      <th>生年月日</th>
      <td><%= @member.birth_date %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @member.email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
          <% if @member.is_deleted == true %>
           <td class="text-black-50">退会</td>
          <% else %>
           <td class="text-success">有効</td>
          <% end %>
    </tr>
  </table>

  <span><%= link_to "編集する",edit_admin_member_path,class: 'btn btn-success' %></span>
  <span><%= link_to "投稿履歴",admin_member_history_path(@member),class: 'btn btn-success' %></span>

  </div>
 </div>
</div>